<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Fleet Monitor Wizard Form View -->
    <record id="fleet_monitor_wizard_view_form" model="ir.ui.view">
        <field name="name">fleet.monitor.wizard.form</field>
        <field name="model">fleet.monitor.wizard</field>
        <field name="arch" type="xml">
            <form string="Monitor Unit">
                <group>
                    <field name="vehicle_id" readonly="1"/>
                    <field name="duration_hours" widget="integer"/>
<!--                    <field name="api_token" password="True"/>-->
                </group>
                <footer>
                    <button name="action_create_monitor_link"
                            type="object"
                            string="Submit"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Fleet Monitor Wizard Action -->
    <record id="fleet_monitor_wizard_action" model="ir.actions.act_window">
        <field name="name">Monitor Unit</field>
        <field name="res_model">fleet.monitor.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>