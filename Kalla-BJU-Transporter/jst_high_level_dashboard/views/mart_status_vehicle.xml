<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_mart_status_vehicle_tree" model="ir.ui.view">
            <field name="name">mart.status.vehicle.tree</field>
            <field name="model">mart.status.vehicle</field>
            <field name="arch" type="xml">
                <tree string="Vehicle Status" create="false" edit="false" delete="false">
                    <field name="vehicle_code"/>
                    <field name="vehicle_name"/>
                    <field name="license_plate"/>
                    <field name="no_lambung"/>
                    <field name="status"/>
                    <field name="status_desc"/>
                    <field name="product_category_name"/>
                    <field name="vehicle_category_name"/>
                    <field name="last_update"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_mart_status_vehicle_form" model="ir.ui.view">
            <field name="name">mart.status.vehicle.form</field>
            <field name="model">mart.status.vehicle</field>
            <field name="arch" type="xml">
                <form string="Vehicle Status" create="false" edit="false">
                    <sheet>
                        <group>
                            <group string="Vehicle Information">
                                <field name="vehicle_code"/>
                                <field name="vehicle_name"/>
                                <field name="license_plate"/>
                                <field name="no_lambung"/>
                                <field name="fleet_vehicle_id" readonly="1"/>
                            </group>
                            <group string="Status Information">
                                <field name="status"/>
                                <field name="status_desc"/>
                            </group>
                        </group>
                        <group>
                            <group string="Category Information">
                                <field name="product_category_name"/>
                                <field name="vehicle_category_name"/>
                            </group>
                            <group string="System Information">
                                <field name="last_update"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_mart_status_vehicle_search" model="ir.ui.view">
            <field name="name">mart.status.vehicle.search</field>
            <field name="model">mart.status.vehicle</field>
            <field name="arch" type="xml">
                <search string="Vehicle Status">
                    <field name="vehicle_code"/>
                    <field name="vehicle_name"/>
                    <field name="license_plate"/>
                    <field name="status"/>
                    <field name="status_desc"/>
                    <field name="product_category_name"/>
                    <field name="vehicle_category_name"/>

                    <filter string="Driver Not Ready" name="driver_not_ready"
                            domain="[('status_desc', '=', 'DRIVER NOT READY')]"/>
                    <filter string="License Not Ready" name="license_not_ready"
                            domain="[('status_desc', '=', 'LICENSE NOT READY')]"/>

                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_status"
                                context="{'group_by': 'status'}"/>
                        <filter string="Status Description" name="group_status_desc"
                                context="{'group_by': 'status_desc'}"/>
                        <filter string="Product Category" name="group_product_category"
                                context="{'group_by': 'product_category_name'}"/>
                        <filter string="Vehicle Category" name="group_vehicle_category"
                                context="{'group_by': 'vehicle_category_name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_mart_status_vehicle" model="ir.actions.act_window">
            <field name="name">Vehicle Status</field>
            <field name="res_model">mart.status.vehicle</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_mart_status_vehicle_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No vehicle status data available
                </p>
                <p>
                    This data contains consolidated vehicle status information.
                    Data is automatically synchronized daily.
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_mart_status_vehicle_root"
                  name="Data Dashboard"
                  parent="fleet.menu_root"
                  sequence="100"/>

        <menuitem id="menu_mart_status_vehicle"
                  name="Vehicle Status"
                  parent="menu_mart_status_vehicle_root"
                  action="action_mart_status_vehicle"
                  sequence="10"/>

    </data>
</odoo>