<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_mart_customer_contract_tree" model="ir.ui.view">
            <field name="name">mart.customer.contract.tree</field>
            <field name="model">mart.customer.contract</field>
            <field name="arch" type="xml">
                <tree string="Customer Contract" create="false" edit="false" delete="false">
                    <field name="customer_name"/>
                    <field name="contract_start_date"/>
                    <field name="contract_end_date"/>
                    <field name="is_contract_issue" widget="boolean_toggle"/>
                    <field name="last_updated"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_mart_customer_contract_form" model="ir.ui.view">
            <field name="name">mart.customer.contract.form</field>
            <field name="model">mart.customer.contract</field>
            <field name="arch" type="xml">
                <form string="Customer Contract" create="false" edit="false" delete="false">
                    <header>
                        <button name="action_refresh_data_mart" string="Refresh Data"
                                type="object" class="oe_highlight"
                                groups="base.group_system"/>
                    </header>
                    <sheet>
                        <group>
                            <group string="Contract Information">
                                <field name="contract_id"/>
                                <field name="contract_start_date"/>
                                <field name="contract_end_date"/>
                                <field name="is_contract_issue"/>
                            </group>
                            <group string="Customer Information">
                                <field name="customer_id"/>
                                <field name="customer_name"/>
                            </group>
                            <group string="Data Information">
                                <field name="last_updated"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_mart_customer_contract_search" model="ir.ui.view">
            <field name="name">mart.customer.contract.search</field>
            <field name="model">mart.customer.contract</field>
            <field name="arch" type="xml">
                <search string="Customer Contract">
                    <field name="customer_name" string="Customer"
                           filter_domain="[('customer_name', 'ilike', self)]"/>
                    <field name="contract_start_date"/>
                    <field name="contract_end_date"/>

                    <filter name="has_issues" string="Has Issues"
                            domain="[('is_contract_issue', '=', True)]"/>
                    <filter name="no_issues" string="No Issues"
                            domain="[('is_contract_issue', '=', False)]"/>

                    <separator/>
                    <filter name="expiring_soon" string="Expiring Soon (10 days)"
                            domain="[('contract_end_date', '&lt;=', (context_today() + datetime.timedelta(days=10)).strftime('%Y-%m-%d')),
                                     ('contract_end_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter name="expired" string="Expired"
                            domain="[('contract_end_date', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>

                    <group expand="0" string="Group By">
                        <filter string="Contract Issue Status" name="group_by_issue_status"
                                context="{'group_by': 'is_contract_issue'}"/>
                        <filter string="Contract Start Date" name="group_by_start_date"
                                context="{'group_by': 'contract_start_date'}"/>
                        <filter string="Contract End Date" name="group_by_end_date"
                                context="{'group_by': 'contract_end_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_mart_customer_contract" model="ir.actions.act_window">
            <field name="name">Customer Contract</field>
            <field name="res_model">mart.customer.contract</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Customer Contract
                </p>
                <p>
                    This data contains aggregated information about customer contracts.
                    The data is automatically refreshed daily through a scheduled action.
                </p>
            </field>
        </record>

        <menuitem id="menu_mart_customer_contract"
                  name="Customer Contract"
                  parent="menu_mart_status_vehicle_root"
                  action="action_mart_customer_contract"
                  sequence="10"/>

    </data>
</odoo>