<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_mart_delivery_category_revenue_tree" model="ir.ui.view">
            <field name="name">mart.delivery.category.revenue.tree</field>
            <field name="model">mart.delivery.category.revenue</field>
            <field name="arch" type="xml">
                <tree string="Delivery Category Revenue" create="false" delete="false" edit="false">
                    <field name="date"/>
                    <field name="delivery_category_name"/>
                    <field name="name_capitalize"/>
                    <field name="do_id"/>
                    <field name="delivery_category_id"/>
                    <field name="actual_revenue" sum="Total Revenue"/>
                    <field name="bop" sum="Total BOP"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_mart_delivery_category_revenue_form" model="ir.ui.view">
            <field name="name">mart.delivery.category.revenue.form</field>
            <field name="model">mart.delivery.category.revenue</field>
            <field name="arch" type="xml">
                <form string="Delivery Category Revenue" create="false" delete="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="do_id"/>
                                <field name="delivery_category_id"/>
                                <field name="delivery_category_name"/>
                                <field name="name_capitalize"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="actual_revenue"/>
                                <field name="bop"/>
                            </group>
<!--                            <group string="References (Optional)" invisible="fleet_do_ref == False and delivery_category_ref == False">-->
<!--                                <field name="fleet_do_ref"/>-->
<!--                                <field name="delivery_category_ref"/>-->
<!--                            </group>-->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_mart_delivery_category_revenue_search" model="ir.ui.view">
            <field name="name">mart.delivery.category.revenue.search</field>
            <field name="model">mart.delivery.category.revenue</field>
            <field name="arch" type="xml">
                <search string="Search Delivery Category Revenue">
                    <field name="delivery_category_name"/>
                    <field name="date"/>
                    <field name="do_id"/>
                    <field name="delivery_category_id"/>
                    <separator/>
                    <filter string="This Month" name="this_month"
                            domain="[('date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                     ('date', '&lt;=', (context_today() + relativedelta(months=1, day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                    <filter string="Last Month" name="last_month"
                            domain="[('date', '&gt;=', (context_today() + relativedelta(months=-1, day=1)).strftime('%Y-%m-%d')),
                                     ('date', '&lt;=', (context_today() + relativedelta(day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Delivery Category" name="group_by_category" context="{'group_by': 'delivery_category_name'}"/>
                        <filter string="Date" name="group_by_date" context="{'group_by': 'date'}"/>
                        <filter string="Month" name="group_by_month" context="{'group_by': 'date:month'}"/>
                        <filter string="Year" name="group_by_year" context="{'group_by': 'date:year'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Pivot View -->
        <record id="view_mart_delivery_category_revenue_pivot" model="ir.ui.view">
            <field name="name">mart.delivery.category.revenue.pivot</field>
            <field name="model">mart.delivery.category.revenue</field>
            <field name="arch" type="xml">
                <pivot string="Delivery Category Revenue Analysis">
                    <field name="delivery_category_name" type="row"/>
                    <field name="date" type="col" interval="month"/>
                    <field name="actual_revenue" type="measure"/>
                    <field name="bop" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Graph View -->
        <record id="view_mart_delivery_category_revenue_graph" model="ir.ui.view">
            <field name="name">mart.delivery.category.revenue.graph</field>
            <field name="model">mart.delivery.category.revenue</field>
            <field name="arch" type="xml">
                <graph string="Delivery Category Revenue Trend" type="line">
                    <field name="date" interval="month"/>
                    <field name="actual_revenue" type="measure"/>
                    <field name="delivery_category_name"/>
                </graph>
            </field>
        </record>

        <!-- Action -->
        <record id="action_mart_delivery_category_revenue" model="ir.actions.act_window">
            <field name="name">Delivery Category Revenue</field>
            <field name="res_model">mart.delivery.category.revenue</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="search_view_id" ref="view_mart_delivery_category_revenue_search"/>
            <field name="context">{'search_default_this_month': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records found!
                </p>
                <p>
                    This data contains delivery category revenue analysis.
                    Data is automatically updated daily via scheduled job.
                </p>
            </field>
        </record>

        <menuitem id="menu_mart_delivery_category_revenue"
                  name="Delivery Category Revenue"
                  parent="menu_mart_status_vehicle_root"
                  action="action_mart_delivery_category_revenue"
                  sequence="10"/>
    </data>
</odoo>