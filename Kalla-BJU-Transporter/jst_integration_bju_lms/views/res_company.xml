<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form" model="ir.ui.view">
        <field name="name">view_company_form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="oracle_integration" string="Oracle Integration">
                    <group>
                        <group>
                            <field name="businessUnit"/>
                        </group>
                        <group>
                            <field name="transactionSource"/>
                        </group>
                    </group>
                    <group name="transaction_type_by_program" string="Transaction Type by Program">
                        <group>
                            <field name="transactionType"/>
                        </group>
                        <field name="transaction_types">
                            <tree editable="bottom">
                                <field name="program_category_id"/>
                                <field name="transaction_type"/>
                            </tree>
                        </field>
                    </group>
                    <group name="AR" string="AR">
                        <group>
                            <field name="conversionRateType"/>
                        </group>
                        <field name="ar_lines">
                            <tree editable="bottom">
                                <field name="memoLineName"/>
                                <field name="description"/>
                                <field name="account_id"/>
                                <field name="taxClassificationCode"/>
                                <field name="program_category_id"/>
                            </tree>
                        </field>
                    </group>
                    <group name="AP" string="AP">
                        <group>
                            <field name="org"/>
                        </group>
                        <field name="ap_lines">
                            <tree editable="bottom">
                                <field name="DistributionSet"/>
                                <field name="description"/>
                                <field name="account_id"/>
                                <field name="taxClassification"/>
                                <field name="program_category_id"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>