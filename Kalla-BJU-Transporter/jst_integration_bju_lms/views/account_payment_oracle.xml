<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_payment_oracle_view_tree" model="ir.ui.view">
        <field name="name">account.payment.oracle.view.tree</field>
        <field name="model">account.payment.oracle</field>
        <field name="arch" type="xml">
            <tree editable="top" duplicate="false">
                <field name="name"/>
                <field name="type"/>
                <field name="status" widget="badge"
                       decoration-success="status == 'fully_paid'"
                       decoration-info="status == 'partial_paid'"
                       decoration-warning="status == 'nothing'"/>
            </tree>
        </field>
    </record>

    <record id="account_payment_oracle_view_filter" model="ir.ui.view">
        <field name="name">Oracle Payment</field>
        <field name="model">account.payment.oracle</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="type"/>
                <field name="status"/>
                <filter string="Not Fully Paid" name="not_fully_paid" domain="[('status', '!=', 'fully_paid')]"/>
            </search>
        </field>
    </record>

    <record id="account_payment_oracle_action" model="ir.actions.act_window">
        <field name="name">Oracle Payment</field>
        <field name="res_model">account.payment.oracle</field>
        <field name="view_mode">tree</field>
        <field name="context">{'search_default_not_fully_paid': 1}</field>
    </record>
    
    <menuitem
        id="account_payment_oracle_menu"
        name="Oracle Payment"
        action="account_payment_oracle_action"
        parent="account_accountant.menu_accounting"
        sequence="4"/>

</odoo>
