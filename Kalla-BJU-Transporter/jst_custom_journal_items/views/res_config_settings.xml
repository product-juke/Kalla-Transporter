<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add COGS settings to Accounting Configuration -->
        <record id="view_account_config_settings_inherit_cogs" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.cogs</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//app[@name='account']" position="inside">
                    <field name="show_field" invisible="1" />
                    <div invisible="show_field == 'Frozen'">
                        <h2>COGS (Cost of Goods Sold) Settings</h2>

                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="enable_cogs_journal_items"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="enable_cogs_journal_items"/>
                                    <div class="text-muted">
                                        Automatically generate COGS journal items when invoice is saved (draft state)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt16 o_settings_container" invisible="not enable_cogs_journal_items">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="">
                                    <label for="cogs_income_account_id"/>
                                    <br />
                                    <field name="cogs_income_account_id"/>
                                    <div class="text-muted">
                                        Account to be credited in COGS journal entries (Income/Uang Muka Account)
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="">
                                    <label for="cogs_expense_account_id"/>
                                    <br />
                                    <field name="cogs_expense_account_id"/>
                                    <div class="text-muted">
                                        Account to be debited in COGS journal entries (Expense/HPP Account)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

<!--                    <div class="row mt16" invisible="not enable_cogs_journal_items">-->
<!--                        <div class="col-12">-->
<!--                            <div class="alert alert-info" role="alert">-->
<!--                                <strong>Note:</strong> COGS journal items will be automatically created when:-->
<!--                                <ul class="mb-0">-->
<!--                                    <li>Invoice type is Customer Invoice or Vendor Bill</li>-->
<!--                                    <li>Invoice is in Draft state</li>-->
<!--                                    <li>Both Income and Expense accounts are configured</li>-->
<!--                                    <li>BOP amount is greater than 0</li>-->
<!--                                </ul>-->
<!--                            </div>-->
<!--                        </div>-->
<!--                    </div>-->
                </xpath>
            </field>
        </record>
    </data>
</odoo>