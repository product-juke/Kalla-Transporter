<odoo>
  <data>
    <record id="wrapper_sale_order_line_tree_view" model="ir.ui.view">
        <field name="name">sale.order.tree.wrap</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attributes name="context">"{'portfolio': context.get('portfolio')}"</attributes>
            </xpath>
        </field>
    </record>
  </data>
</odoo>
