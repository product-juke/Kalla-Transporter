<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_violation_view_tree" model="ir.ui.view">
        <field name="name">hr.violation.view.tree</field>
        <field name="model">hr.violation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="type_violation"/>
                <field name="violation"/>
            </tree>
        </field>
    </record>

    <record id="hr_violation_view_tree_form" model="ir.ui.view">
        <field name="name">hr.violation.view.form</field>
        <field name="model">hr.violation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="type_violation"/>
                        </group>
                    </group>
                    <h1>
                        <field name="violation" />
                    </h1>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_violation_action" model="ir.actions.act_window">
        <field name="name">Violation</field>
        <field name="res_model">hr.violation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="hr_violation_menu"
            name="Violation"
            action="hr_violation_action"
            sequence="22"
            parent="hr.menu_hr_employee_payroll"/>
</odoo>
