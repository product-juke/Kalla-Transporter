<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_disciplinary_action_plan_tree" model="ir.ui.view">
            <field name="name">disciplinary.action.plan.tree</field>
            <field name="model">disciplinary.action.plan</field>
            <field name="arch" type="xml">
                <tree string="Disciplinary Action Plans" editable="bottom">
                    <field name="name"/>
                    <field name="usage_count"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_disciplinary_action_plan_form" model="ir.ui.view">
            <field name="name">disciplinary.action.plan.form</field>
            <field name="model">disciplinary.action.plan</field>
            <field name="arch" type="xml">
                <form string="Disciplinary Action Plan">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_disciplinary_lines" type="object"
                                    class="oe_stat_button" icon="fa-list">
                                <field name="usage_count" widget="statinfo"
                                       string="Used In"/>
                            </button>
                        </div>

                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                invisible="active == True"/>

                        <group>
                            <field name="name" placeholder="e.g. Konseling dan Pembinaan"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_disciplinary_action_plan_search" model="ir.ui.view">
            <field name="name">disciplinary.action.plan.search</field>
            <field name="model">disciplinary.action.plan</field>
            <field name="arch" type="xml">
                <search string="Search Action Plans">
                    <field name="name"/>
                    <separator/>
                    <filter name="active" string="Active" domain="[('active','=',True)]"/>
                    <filter name="inactive" string="Archived" domain="[('active','=',False)]"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_disciplinary_action_plan" model="ir.actions.act_window">
            <field name="name">Disciplinary Action Plans</field>
            <field name="res_model">disciplinary.action.plan</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first disciplinary action plan!
                </p>
                <p>
                    Set up master data for disciplinary action plans that will be used
                    to define corrective actions in disciplinary cases.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_disciplinary_action_plan"
              name="Disciplinary Action Plan"
              parent="hr.menu_config_employee"
              action="action_disciplinary_action_plan"
              sequence="10"/>
    </data>
</odoo>