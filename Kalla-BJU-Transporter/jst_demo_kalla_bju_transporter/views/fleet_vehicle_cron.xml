<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job untuk Auto Update Vehicle Status -->
        <record id="cron_auto_update_vehicle_status" model="ir.cron">
            <field name="name">Auto Update Vehicle Status</field>
            <field name="model_id" ref="jst_demo_kalla_bju_transporter.model_fleet_vehicle"/>
            <field name="state">code</field>
            <field name="code">model._cron_auto_update_vehicle_status()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=1, minute=0, second=0)"/>
        </record>
    </data>

</odoo>