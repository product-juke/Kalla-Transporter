<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="delivery_category_view_tree" model="ir.ui.view">
        <field name="name">delivery.category.view.tree</field>
        <field name="model">delivery.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_category_id"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="delivery_category_view_form" model="ir.ui.view">
        <field name="name">delivery.category.view.form</field>
        <field name="model">delivery.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" placeholder="Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_category_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="delivery_category_action" model="ir.actions.act_window">
        <field name="name">Delivery Category</field>
        <field name="res_model">delivery.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="delivery_category_menu"
            name="Delivery Category"
            action="delivery_category_action"
            sequence="21"
            parent="jst_demo_kalla_bju_transporter.root_transporter"/>

</odoo>
