<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_resume_line_form_inherit_bju" model="ir.ui.view">
        <field name="name">hr.resume.line.form.inherit.bju</field>
        <field name="model">hr.resume.line</field>
        <field name="inherit_id" ref="hr_skills.resume_line_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_type_id']" position="after">
                <field name="position" invisible = "line_type_id != 1"/>
                <field name="resign_description" invisible = "line_type_id != 1"/>
                <field name="training_plan" invisible = "line_type_id != 4"/>
                <field name="training_plan_date" invisible = "line_type_id != 4"/>
                <field name="file_certificate_training" filename="file_certificate_name" invisible = "line_type_id != 4"/>
                <field name="file_certificate_name" invisible="True"/>
            </xpath>
        </field>
    </record>

