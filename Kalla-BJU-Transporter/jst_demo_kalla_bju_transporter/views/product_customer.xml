<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_customer_view_tree" model="ir.ui.view">
        <field name="name">product.customer.view.tree</field>
        <field name="model">product.customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="product_customer_view_tree_form" model="ir.ui.view">
        <field name="name">product.customer.view.form</field>
        <field name="model">product.customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name" />
                    </h1>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_customer_action" model="ir.actions.act_window">
        <field name="name">Product Customer</field>
        <field name="res_model">product.customer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="product_customer_menu"
            name="Product Customer"
            action="product_customer_action"
            sequence="22"
            parent="jst_demo_kalla_bju_transporter.root_transporter"/>
</odoo>
