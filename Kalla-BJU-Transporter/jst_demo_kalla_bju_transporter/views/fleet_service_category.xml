<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fleet_service_category_view_tree" model="ir.ui.view">
        <field name="name">fleet.service.category.view.tree</field>
        <field name="model">fleet.service.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="service_category"/>
            </tree>
        </field>
    </record>

    <record id="fleet_service_category_view_form" model="ir.ui.view">
        <field name="name">fleet.service.category.view.form</field>
        <field name="model">fleet.service.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="service_category"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fleet_service_category_action" model="ir.actions.act_window">
        <field name="name">Fleet Service Category</field>
        <field name="res_model">fleet.service.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="fleet_service_category_menu"
            name="Category"
            action="fleet_service_category_action"
            sequence="20"
            parent="fleet.fleet_services_configuration"/>

</odoo>
