<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Alternative: Tree view with parent context -->
        <record id="view_move_line_tree_inherit" model="ir.ui.view">
            <field name="name">account.move.line.tree.inherit</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="no_surat_jalan" string="No. Surat Jalan" optional="show" readonly="1" groups="jst_lms_group.group_logistic_lms_marketing,jst_lms_group.group_logistic_lms_plan_armada,jst_lms_group.group_logistic_lms_spv,jst_lms_group.group_logistic_lms_cashier,jst_lms_group.group_logistic_lms_revenue_control,jst_lms_group.group_logistic_lms_kacab,jst_lms_group.group_logistic_lms_adh,jst_lms_group.group_logistic_lms_doc_delivery"/>
                    <field name="tp_show_dpp_nilai_lain" column_invisible="1" />
                    <field name="tp_dpp_nilai_lain" string="DPP Nilai Lain" readonly="1" groups="jst_lms_group.group_logistic_lms_marketing,jst_lms_group.group_logistic_lms_plan_armada,jst_lms_group.group_logistic_lms_spv,jst_lms_group.group_logistic_lms_cashier,jst_lms_group.group_logistic_lms_revenue_control,jst_lms_group.group_logistic_lms_kacab,jst_lms_group.group_logistic_lms_adh,jst_lms_group.group_logistic_lms_doc_delivery"/>
                </xpath>
            </field>
        </record>

        <!-- Custom view for vendor bills with proper context -->
        <record id="view_move_form_vendor_bill_custom" model="ir.ui.view">
            <field name="name">account.move.vendor.bill.custom</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_bop" type="object" class="oe_stat_button"
                        icon="fa-list" invisible="bop_count == 0">
                        <field name="bop_count" widget="statinfo" string="BOP" />
                    </button>
                    <field name="show_field" invisible="1" />
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='price_unit']" position="after">
                    <field name="no_surat_jalan" string="No. Surat Jalan"
                           column_invisible="parent.move_type not in ['out_invoice', 'in_invoice'] or parent.show_field == 'Frozen'"
                           optional="show" readonly="1" groups="jst_lms_group.group_logistic_lms_marketing,jst_lms_group.group_logistic_lms_plan_armada,jst_lms_group.group_logistic_lms_spv,jst_lms_group.group_logistic_lms_cashier,jst_lms_group.group_logistic_lms_revenue_control,jst_lms_group.group_logistic_lms_kacab,jst_lms_group.group_logistic_lms_adh,jst_lms_group.group_logistic_lms_doc_delivery"/>
                    <field name="tp_show_dpp_nilai_lain" column_invisible="1" />
                    <field name="tp_dpp_nilai_lain" string="DPP Nilai Lain" readonly="1" groups="jst_lms_group.group_logistic_lms_marketing,jst_lms_group.group_logistic_lms_plan_armada,jst_lms_group.group_logistic_lms_spv,jst_lms_group.group_logistic_lms_cashier,jst_lms_group.group_logistic_lms_revenue_control,jst_lms_group.group_logistic_lms_kacab,jst_lms_group.group_logistic_lms_adh,jst_lms_group.group_logistic_lms_doc_delivery"/>
                    <field name="sodo_reference" column_invisible="parent.move_type not in ['out_invoice', 'in_invoice'] or parent.show_field == 'Frozen'"/>
                    <field name="geofence_unloading" column_invisible="parent.move_type not in ['out_invoice', 'in_invoice'] or parent.show_field == 'Frozen'"/>
                </xpath>
                <xpath expr="//field[@name='amount_residual']" position="before">
                    <field name="tp_dpp_nilai_lain" class="oe_subtotal_footer_separator" invisible="show_field == 'Frozen'" groups="jst_lms_group.group_logistic_lms_marketing,jst_lms_group.group_logistic_lms_plan_armada,jst_lms_group.group_logistic_lms_spv,jst_lms_group.group_logistic_lms_cashier,jst_lms_group.group_logistic_lms_revenue_control,jst_lms_group.group_logistic_lms_kacab,jst_lms_group.group_logistic_lms_adh,jst_lms_group.group_logistic_lms_doc_delivery"/>
                </xpath>
                <xpath expr="//page[@name='other_info']//field[@name='invoice_origin']" position="before">
                    <field name="aging_invoice_overdue" readonly="1" invisible="show_field in ('Frozen', 'General')"/>
                </xpath>
                <xpath expr="//field[@name='delivery_date']" position="after">
                    <field name="can_edit_lines_tax_ids" invisible="1"/>
                    <field name="tax_invoicing_method" invisible="1" />
                    <field name="tax_ids" invisible="show_field in ('Frozen', 'General') or tax_invoicing_method != 'total_invoice'" widget="many2many_tags" readonly="state != 'draft' or tax_invoicing_method != 'total_invoice'"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='tax_ids']" position="attributes">
                    <attribute name="readonly">not parent.can_edit_lines_tax_ids and parent.tax_invoicing_method == 'total_invoice'</attribute>
                </xpath>
                <field name="payment_reference" position="after">
                    <field name="periode_rekapan" invisible="show_field in ('Frozen', 'General')"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
