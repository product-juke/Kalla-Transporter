<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Purchase Order Form View -->
    <record id="purchase_order_form_inherit_fleet_do" model="ir.ui.view">
        <field name="name">purchase.order.form.fleet.do</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <!-- Add smart button to header -->
            <div name="button_box" position="inside">
                <button name="action_view_fleet_do"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck"
                        invisible="fleet_do_count == 0">
                    <field name="fleet_do_count" widget="statinfo" string="Fleet DO"/>
                </button>
            </div>

            <!-- Add field in form (optional, bisa disembunyikan) -->
            <field name="partner_id" position="after">
                <field name="fleet_do_id" readonly="1" invisible="fleet_do_count == 0"/>
            </field>

        </field>
    </record>

</odoo>