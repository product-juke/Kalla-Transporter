<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_company_inherit_view" model="ir.ui.view">
        <field name="name">inherit.res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='general_info']/group[1]/group[2]/field[@name='parent_id']" position="after">
                <field name="company_code"/>
            </xpath>
        </field>
    </record>
</odoo>