<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <t t-name="customer.Dashboard">
        <div class="o_content pt-3">
            <h1 class="text-center">Customer Dashboard</h1>

            <!-- Filter berdasarkan tanggal -->
            <div class="row justify-content-center px-2">
                <div class="col-md-6">
                    <div class="row justify-content-center align-items-end my-3">
                        <div class="col-md-5">
                            <label for="start_date">Start Date :</label>
                            <input type="date" id="start_date" name="startDate" t-on-change="handleDateChange" class="form-control"/>
                        </div>
                        <div class="col-md-5">
                            <label for="end_date">End Date :</label>
                            <input type="date" id="end_date" name="endDate" t-on-change="handleDateChange" class="form-control"/>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary" t-on-click="loadAllData">Filter</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="chart-container col-md-6 pe-md-5" style="height: 400px;">
                    <canvas id="customerChart"></canvas>
                </div>
                <div class="col-md-6">
                    <h3>Top 10 Customers with Outstanding Payments</h3>
                    <!-- Table displaying top 10 customers -->
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Customer</th>
                                <th>Outstanding Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Loop through customers and display rows -->
                            <t t-foreach="state.outstandingCustomers" t-as="customer" t-key="customer.id">
                                <tr>
                                    <td><t t-esc="customer.name"/></td>
                                    <td>
                                        <!-- Use the monetary widget to format the outstanding amount -->
                                        <t t-esc="customer.outstanding" t-options='{"widget": "monetary"}'/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </t>
</odoo>
