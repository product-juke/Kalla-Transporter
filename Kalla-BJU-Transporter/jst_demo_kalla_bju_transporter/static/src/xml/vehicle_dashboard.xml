<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <t t-name="vehicle.Dashboard">
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <div class="o_control_panel p-0" style="height: 100vh; overflow-y: auto; padding: 20px;">
            <div class="container-fluid py-3">
                <h1 class="mb-4 text-center">Vehicle Fleet Monitoring Dashboard</h1>
                
                <!-- Transporter Armada Section -->
                <t t-if="state.show_all or (state.portfolios and state.portfolios.indexOf('Transporter') !== -1)">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h3 class="m-0 text-white">Transporter Armada Monitoring</h3>
                    </div>
                    <div class="card-body">
                        <div class="row g-3 justify-content-center">
                            <div class="col-md-2 col-sm-6">
                                <div class="card h-100 shadow-sm" style="cursor: pointer;" t-on-click="_onClickTransReadyForUse">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Transporter</h5>
                                        <div class="my-3">
                                            <img src="jst_demo_kalla_bju_transporter/static/src/img/truck_9656226.png" class="img-fluid" style="width: 50px;" alt="Ready truck"/>
                                        </div>
                                        <p class="card-text mt-3">
                                            Ready for Use: <span class="badge bg-success text-white"><t t-esc="state.trans_vehicle_count_ready"/></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-2 col-sm-6">
                                <div class="card h-100 shadow-sm" style="cursor: pointer;" t-on-click="_onClickTransOnBook">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Transporter</h5>
                                        <div class="my-3">
                                            <img src="jst_demo_kalla_bju_transporter/static/src/img/truck (2).png" class="img-fluid" style="width: 50px;" alt="On book truck"/>
                                        </div>
                                        <p class="card-text mt-3">
                                            Ready On Book: <span class="badge bg-info text-white"><t t-esc="state.trans_vehicle_count_ready_on_book"/></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-2 col-sm-6">
                                <div class="card h-100 shadow-sm" style="cursor: pointer;" t-on-click="_onClickTransOnGoing">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Transporter</h5>
                                        <div class="my-3">
                                            <img src="jst_demo_kalla_bju_transporter/static/src/img/delivery.png" class="img-fluid" style="width: 50px;" alt="On going truck"/>
                                        </div>
                                        <p class="card-text mt-3">
                                            On Going: <span class="badge bg-warning text-dark text-white"><t t-esc="state.trans_vehicle_count_on_going"/></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-2 col-sm-6">
                                <div class="card h-100 shadow-sm" style="cursor: pointer;" t-on-click="_onClickTransOnReturn">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Transporter</h5>
                                        <div class="my-3">
                                            <img src="jst_demo_kalla_bju_transporter/static/src/img/return_1.png" class="img-fluid" style="width: 50px;" alt="On return truck"/>
                                        </div>
                                        <p class="card-text mt-3">
                                            On Return: <span class="badge bg-primary text-white"><t t-esc="state.trans_vehicle_count_on_return"/></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-2 col-sm-6">
                                <div class="card h-100 shadow-sm" style="cursor: pointer;" t-on-click="_onClickTransNotReady">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Transporter</h5>
                                        <div class="my-3">
                                            <img src="jst_demo_kalla_bju_transporter/static/src/img/transporter_not_ready.png" class="img-fluid" style="width: 50px;" alt="Not ready VLI"/>
                                        </div>
                                        <p class="card-text mt-3">
                                            Not Ready: <span class="badge bg-danger text-white"><t t-esc="state.trans_vehicle_count_not_ready"/></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </t>
                
                <!-- VLI Armada Section -->
                <t t-if="state.show_all or (state.portfolios and state.portfolios.indexOf('VLI') !== -1)">
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h3 class="m-0 text-white">VLI Armada Monitoring</h3>
                    </div>
                    <div class="card-body">
                        <div class="row g-3 justify-content-center">
