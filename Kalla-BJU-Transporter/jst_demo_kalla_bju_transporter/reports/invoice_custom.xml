<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="invoice_custom_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="rec">
            <t t-call="web.external_layout">
                <div class="row">
                    <table class="table table-borderless" style="width: 100%;">
                        <tr>
                            <td style="width: 50%; vertical-align: top;">
                                <t t-if="o and 'company_id' in o">
                                    <t t-set="company" t-value="o.company_id"/>
                                </t>
                                <t t-if="not o or not 'company_id' in o">
                                    <t t-set="company" t-value="res_company"/>
                                </t>
                                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 200px;" />
                            </td>
                            <td style="width: 50%; vertical-align: top;">
                                <span t-field="company.partner_id.street"/><br/>
                                <span t-field="company.partner_id.city"/><br/>
                                <span t-field="company.partner_id.country_id"/><br/>
                                <t t-set="selected_bank" t-value="None"/>
                                <t t-foreach="company.partner_id.bank_ids" t-as="bank_line">
                                    <t t-if="not selected_bank and not bank_line.allow_out_payment">
                                        <t t-set="selected_bank" t-value="bank_line"/>
                                    </t>
                                </t>

                                <t t-if="selected_bank">
                                    <span t-esc="selected_bank.bank_id.name"/> - <span t-esc="selected_bank.acc_number"/><br/>
                                </t>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="row">
                    <table class="table table-sm o_main_table table-borderless" style="width: 100%;">
                        <tr style="background-color: #f2f2f2;">
                            <th style="text-align: center; padding: 11px; font-weight: bold;">Bill-to</th>
                            <th style="text-align: center; padding: 11px; font-weight: bold;">Ship-to</th>
                            <th style="text-align: center; padding: 11px; font-weight: bold;">Invoice</th>
                        </tr>
                        <tr style="background-color: #f9f9f9;">
                            <td style="vertical-align: top;">
                                <span t-field="rec.partner_id"/><br/>
                                <span t-field="rec.partner_id.street"/><br/>
                                <span t-field="rec.partner_id.city"/><br/>
                                <span t-field="rec.partner_id.country_id"/><br/>
                                <span t-field="rec.partner_id.vat"/><br/>
                            </td>
                            <td style="vertical-align: top;">
                                <span t-field="rec.partner_shipping_id"/><br/>
                                <span t-field="rec.partner_shipping_id.street"/><br/>
                                <span t-field="rec.partner_shipping_id.city"/><br/>
                                <span t-field="rec.partner_shipping_id.country_id"/><br/>
                                <span t-field="rec.partner_shipping_id.vat"/><br/>
                            </td>
                            <td style="vertical-align: top;">
                                <span t-field="rec.payment_reference"/>
                            </td>
                        </tr>
                    </table>
                </div>
                <br/>
                <br/>
                <div class="row">
                    <table class="table table-sm o_main_table table-borderless" style="width: 100%;">
                        <tr>
                            <td>Purchase Order</td>
                            <td>Line Total</td>
                            <td>
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="lines" t-value="rec.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                                <t t-foreach="lines" t-as="line">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                                </t>
                                <span t-out="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: rec.currency_id}">0.0</span>
                            </td>
                        </tr>
                        <tr>
                            <td>Invoice Date <span t-field="rec.invoice_date"/></td>
                            <td>Sales Tax</td>
                            <td>
                                <t t-if="rec.tax_totals and rec.tax_totals.get('groups_by_subtotal') and rec.tax_totals['groups_by_subtotal'].get('Untaxed Amount')">
                                    <t t-foreach="rec.tax_totals['groups_by_subtotal']['Untaxed Amount']" t-as="tax_group">
                                        <span t-out="tax_group['tax_group_amount']"
                                              t-options='{"widget": "monetary", "display_currency": rec.currency_id}'/>
                                        <br/>
                                    </t>
                                </t>
                                <t t-else="">
                                    <span>0.0</span>
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <td>Shipped Date</td>
                            <td>Shipping</td>
                            <td>0.0</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td colspan="2">
                                <hr/>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>Total</td>
                            <td>
                                <t t-set="current_total" t-value="0"/>
                                <t t-set="lines" t-value="rec.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                                <t t-foreach="lines" t-as="line">
                                    <t t-set="current_total" t-value="current_total + line.price_total"/>
                                </t>
                                <span t-out="current_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: rec.currency_id}">0.0</span>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>Payment</td>
                            <t t-set="payments_vals" t-value="rec.sudo().invoice_payments_widget and rec.sudo().invoice_payments_widget['content'] or []"/>
                            <t t-foreach="payments_vals" t-as="payment_vals">
                                <td t-if="payment_vals['is_exchange'] == 0">
                                    <span t-out="payment_vals['amount']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: rec.currency_id}"></span>
                                </td>
                                <!-- <td t-else="">0.0</td>-->
                            </t>
                        </tr>
                        <tr>
                            <td></td>
                            <td>Credit</td>
                            <td><span t-field="rec.amount_residual" /></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>Financial Charges</td>
                            <td>0.0</td>
                        </tr>
                    </table>
                </div>
                <br/>
                <br/>
                <div class="row">
                    <table class="table table-sm o_main_table table-borderless" style="width: 100%;">
                        <tr style="background-color: #f2f2f2;">
                            <td><strong>Payment Terms:</strong> <span t-field="rec.invoice_payment_term_id"/></td>
                            <td><strong>Due Date:</strong> <span t-field="rec.invoice_date_due"/></td>
                        </tr>
                    </table>
                </div>
                <div class="mt-5 clearfix">
                    <div class="page mb-4">
                        <h2>
                        </h2>
                        <div class="oe_structure"/>
                        <t t-set="display_discount" t-value="any(l.discount for l in rec.invoice_line_ids)"/>
                        <div class="oe_structure"/>
                        <table class="table table-sm table-bordered o_main_table" name="invoice_line_table" style="width: 100%; border: 1px solid #000;">
                            <thead>
                                <tr>
                                    <th class="text-start" style="width: 30px;">No</th>
                                    <!-- <th name="th_product" class="text-start"><span>Product</span></th> -->
                                    <th name="th_description" class="text-start"><span>Description</span></th>
                                    <th name="th_uom" class="text-end"><span>UOM</span></th>
                                    <th name="th_quantity" class="text-end"><span>Quantity</span></th>
                                    <th name="th_discount" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span>Disc.%</span>
                                    </th>
                                    <th name="th_taxes" t-attf-class="text-start {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>
                                    <th style="background-color: #f2f2f2;" name="th_priceunit" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th>
                                    <th style="background-color: #f2f2f2;" name="th_subtotal" class="text-end">
                                        <span>Amount</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="current_total" t-value="0"/>
                                <t t-set="lines" t-value="rec.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                <t t-set="counter" t-value="0"/>
                                <t t-foreach="lines" t-as="line">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                                    <t t-set="current_total" t-value="current_total + line.price_total"/>
                                    <t t-set="counter" t-value="counter + 1"/>

                                    <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">
                                            <td style="text-align: center;"><span t-esc="counter"/></td>
                                            <!-- <td name="account_invoice_line_product"><span t-if="line.product_id" t-field="line.product_id.name" t-options="{'widget': 'text'}">-</span></td> -->
                                            <td name="account_invoice_line_name"><span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}">Bacon Burger</span></td>
                                            <td style="text-align: center;" name="td_uom" class="text-end">
                                                <span t-field="line.product_uom_id" groups="uom.group_uom">units</span>
                                            </td>
                                            <td style="text-align: center;" name="td_quantity" class="text-end">
                                                <span t-field="line.quantity">3.00</span>
                                            </td>
                                            <td name="td_discount" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.discount">0</span>
                                            </td>
                                            <t t-set="taxes" t-value="', '.join([(tax.invoice_label or tax.name) for tax in line.tax_ids])"/>
                                            <td style="text-align: center;" name="td_taxes" t-attf-class="text-start {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }} {{ 'text-nowrap' if len(taxes) &lt; 10 else '' }}">
                                                <span t-out="taxes" id="line_tax_ids">Tax 15%</span>
                                            </td>
                                            <td style="background-color: #f2f2f2;" name="td_price_unit" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.price_unit">9.00</span>
                                            </td>
                                            <td style="background-color: #f2f2f2;" name="td_subtotal" class="text-end o_price_total">
                                                <span class="text-nowrap" t-field="line.price_subtotal">27.00</span>
                                            </td>
                                        </t>
                                        <!--<t t-elif="line.display_type == 'line_section'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}">A section title</span>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-elif="line.display_type == 'line_note'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}">A note, whose content usually applies to the section or product above.</span>
                                            </td>
                                        </t>-->
                                    </tr>

<!--                                    <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">-->
<!--                                        <tr class="is-subtotal text-end">-->
<!--                                            <td colspan="99">-->
<!--                                                <strong class="mr16">Subtotal</strong>-->
<!--                                                <span t-out="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: rec.currency_id}">31.05</span>-->
<!--                                            </td>-->
<!--                                        </tr>-->
<!--                                    </t>-->
                                </t>
                            </tbody>
                        </table>
                        <div id="right-elements" t-attf-class="#{'col-5' if report_type != 'html' else 'col-12 col-md-5'} ms-5 d-inline-block float-end">
                            <table class="table table-sm table-borderless avoid-page-break-inside" style="border-width: 0;border-height: 0">
                                <thed>
                                    <tr/>
                                    <tr/>
                                </thed>
                                <tbody>
                                    <tr>
                                        <td style="width:90%; text-align: right;"><span>Line Total</span></td>
                                        <td>
                                            <span t-out="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: rec.currency_id}">0.0</span>
                                        </td>
                                    </tr>
                                    <tr style="background-color: #f2f2f2; font-size: 18px">
                                        <td style="width:90%; text-align: right;"><span><strong>Grand Total</strong></span></td>
                                        <td>
                                             <span t-out="current_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: rec.currency_id}">0.0</span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <br/>
                <br/>
                <table class="table table-sm o_main_table table-borderless" style="width: 100%;">
                    <thead>
                        <tr></tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="width: 40%; background-color: #f2f2f2;">
                                <span><strong>Send payment to</strong></span>
                                <br />
                                <span t-field="company.partner_id"/>
                                <br/>
                                <span t-field="company.partner_id.street"/>
                                <br/>
                                <span t-field="company.partner_id.city"/>
                                <br/>
                                <span t-field="company.partner_id.country_id"/>
                                <br/>
                                <t t-set="selected_bank" t-value="None"/>
                                <t t-foreach="company.partner_id.bank_ids" t-as="bank_line">
                                    <t t-if="not selected_bank and not bank_line.allow_out_payment">
                                        <t t-set="selected_bank" t-value="bank_line"/>
                                    </t>
                                </t>

                                <t t-if="selected_bank">
                                    <span t-esc="selected_bank.bank_id.name"/> - <span t-esc="selected_bank.acc_number"/><br/>
                                </t>
                                <br/>
                            </td>
                            <td align="center">
                                <span><strong>Signed By</strong></span>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <span>Irfan</span>
                                <br/>
                                <hr style="width: 30%" />
                                <span>Administration Senior Supervisor</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </t>
        </t>
        </t>
    </template>
</odoo>
